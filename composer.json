{
    "name": "jmfontaine/projectlint",
    "description": "Check PHP project against a ruleset",
    "type": "project",
    "keywords": ["lint"],
    "license": "BSD-3-Clause",
    "homepage": "http://github.com/jmfontaine/projectlint",
    "authors": [
        {
            "name": "Jean-Marc Fontaine",
            "email": "jm@jmfontaine.net",
            "homepage": "http://jmfontaine.net/",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "halleck45/php-metrics": "~1.0.1",
        "hoa/ruler": "dev-master",
        "psr/log": "~1.0",
        "symfony/config": "~2.5.0",
        "symfony/console": "~2.5.0",
        "symfony/expression-language": "~2.5.0",
        "symfony/filesystem": "~2.5.0",
        "symfony/finder": "~2.5.0"
    },
    "require-dev": {
        "mikey179/vfsStream": "~1.3.0",
        "phpunit/phpunit": "~4.2.0",
        "squizlabs/php_codesniffer": "~1.5.4"
    },
    "autoload": {
        "psr-4": {"ProjectLint\\": "src/"}
    },
    "autoload-dev": {
        "psr-4": {"ProjectLint\\Test\\": "tests/"}
    },
    "support": {
        "issues": "https://github.com/jmfontaine/projectlint/issues"
    },
    "bin": ["bin/projectlint"]
}
