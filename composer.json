{
    "name": "jmfontaine/projectlint",
    "description": "Check PHP project against a ruleset",
    "type": "project",
    "keywords": ["lint"],
    "license": "BSD-3-Clause",
    "homepage": "http://github.com/jmfontaine/projectlint",
    "authors": [
        {
            "name": "Jean-Marc Fontaine",
            "email": "jm@jmfontaine.net",
            "homepage": "http://jmfontaine.net/",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "halleck45/php-metrics": "~1.1.1",
        "hoa/ruler": "1.14.12.10",
        "psr/log": "~1.0.0",
        "symfony/config": "~2.6.0",
        "symfony/console": "~2.6.0",
        "symfony/expression-language": "~2.6.0",
        "symfony/filesystem": "~2.6.0",
        "symfony/finder": "~2.6.0"
    },
    "require-dev": {
        "mikey179/vfsStream": "~1.4.0",
        "phpunit/phpunit": "~4.4.0",
        "squizlabs/php_codesniffer": "~2.1.0"
    },
    "autoload": {
        "psr-4": {"ProjectLint\\": "src/"}
    },
    "autoload-dev": {
        "psr-4": {"ProjectLint\\Test\\": "tests/"}
    },
    "support": {
        "issues": "https://github.com/jmfontaine/projectlint/issues"
    },
    "bin": ["bin/projectlint"]
}
